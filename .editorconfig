# Editor configuration, see http://editorconfig.org
# Please change this filename to '.editorconfig' to use
# エディターを横断的に設定できるファイル

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true # 行末の空白を削除するかどうか
insert_final_newline = true # 最終行に空行をいれるかどうか
max_line_length = 80

[*.md]
max_line_length = off
trim_trailing_whitespace = false
